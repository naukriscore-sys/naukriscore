{
  "name": "naukriscore",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "buildBackend": "cd packages/db && npx prisma generate && cd ../../apps/http-backend && bun run build",
    "dev": "turbo run dev",
    "start": "tsx ./apps/http-backend/src/index.ts",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/node": "^24.5.2",
    "express-rate-limiter": "^1.3.1",
    "ts-node": "^10.9.2",
    "yup": "^1.7.1"
  }
}